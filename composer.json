{
    "name": "dmitryrogolev/is",
    "description": "Functional roles for the Laravel framework.",
    "version": "0.0.3",
    "type": "library",
    "keywords": [
        "roles",
        "level",
        "is",
        "laravel",
        "laravel-roles",
        "laravel-level",
        "laravel-is"
    ],
    "homepage": "https://github.com/dmitry-rogolev/Is",
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitry Rogolev",
            "email": "work.drogolev@internet.ru",
            "homepage": "https://dmitryrogolev.ru",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:dmitry-rogolev/Slug.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:dmitry-rogolev/Service.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:dmitry-rogolev/Helper.git"
        }
    ],
    "require": {
        "laravel/framework": "^10.30",
        "dmitryrogolev/service": "^0.0.1",
        "dmitryrogolev/slug": "^0.0.1",
        "dmitryrogolev/helper": "^0.0.3"
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "orchestra/testbench": "^8.21",
        "nunomaduro/collision": "^7.10"
    },
    "autoload": {
        "psr-4": {
            "dmitryrogolev\\Is\\": "src/",
            "dmitryrogolev\\Is\\Database\\Factories\\": "database/factories/",
            "dmitryrogolev\\Is\\Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "dmitryrogolev\\Is\\Tests\\": "tests/",
            "App\\": "workbench/app/",
            "Database\\Factories\\": "workbench/database/factories/",
            "Seeders\\": "workbench/database/seeders/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "dmitryrogolev\\Is\\Providers\\IsServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "@php vendor/bin/testbench package:test",
        "pint": "@php vendor/bin/pint",
        "create-skeleton": [
            "composer create-project laravel/laravel skeleton --verbose", 
            "composer require laravel/jetstream --working-dir=skeleton", 
            "npm install --prefix=skeleton", 
            "ln -s skeleton/node_modules ./ --verbose", 
            "ln skeleton/package.json ./ --verbose", 
            "ln skeleton/package-lock.json ./ --verbose", 
            "ln workbench/vite.config.js ./ --verbose", 
            "ln workbench/tailwind.config.js ./ --verbose",
            "php skeleton/artisan jetstream:install livewire --dark", 
            "touch skeleton/database/database.sqlite", 
            "rm skeleton/.env --verbose", 
            "ln workbench/.env skeleton --verbose", 
            "php skeleton/artisan migrate", 
            "ln -s skeleton/public ./ --verbose"
        ], 
        "remove-skeleton": [
            "rm -r skeleton --verbose", 
            "rm -r node_modules --verbose", 
            "rm package.json --verbose", 
            "rm package-lock.json --verbose", 
            "rm vite.config.js --verbose", 
            "rm tailwind.config.js --verbose", 
            "rm -r public --verbose"
        ], 
        "build": [
            "npm run build"
        ],
        "dev": [
            "npm run dev"
        ], 
        "serve": [
            "@php skeleton/artisan serve"
        ]
    }
}
